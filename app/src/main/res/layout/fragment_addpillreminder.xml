<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicine Name : "
            android:textSize="20dp"/>

        <EditText
            android:textSize="20dp"
            android:id="@+id/editTextMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Medicine Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicine Days : "
            android:textSize="20dp"/>


        <CheckBox
            android:id="@+id/every_day"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EveryDay" />



            <CheckBox
                android:id="@+id/checksunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Sunday"
                />
            <CheckBox
                android:id="@+id/checkmonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Monday"
                />
            <CheckBox
                android:id="@+id/checktues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Tuesday"
                />
            <CheckBox
                android:id="@+id/checkwed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Wednesday"
                />
            <CheckBox
                android:id="@+id/checkthurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Thursday"
                />
            <CheckBox
                android:id="@+id/checkfriday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Friday"
                />
            <CheckBox
                android:id="@+id/checksaturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Saturday"
                />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminders"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtsettime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/btnsettime"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="31dp"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnsettime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Time"/>

            </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:padding="4dp"
                android:id="@+id/tv_dose_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:inputType="number"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_dose_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:entries="@array/medications_shape_array" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
